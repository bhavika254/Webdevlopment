    <div class="bg-overlay"></div> <!-- Black blurred background overlay -->

    <div class="slider-container w3-content w3-display-container">
        <img class="mySlides fade" src="https://www.tripsavvy.com/thmb/cNcBAPMxvMLrvA2gdn__EdOCvpI=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/GettyImages-1024237862-21e9fd7adafc4b8880ba650499432b31.jpg" alt="Slide 1">
        <img class="mySlides fade" src="https://www.holidaymonk.com/wp-content/uploads/2021/09/Beautiful-Leh.jpg" alt="Slide 2">
        <img class="mySlides fade" src="https://www.holidify.com/images/cmsuploads/compressed/Shanti_Stupa,_Leh,_Ladakh_20180305180249.jpg" alt="Slide 3">
        <div class="heading">Ladakh</div>

        <button class="w3-button w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
        <button class="w3-button w3-display-right" onclick="plusDivs(1)">&#10095;</button>
    </div>

    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlides");
            var heading = document.querySelector('.heading');
            if (n > x.length) {slideIndex = 1}
            if (n < 1) {slideIndex = x.length}
            for (i = 0; i < x.length; i++) {
                x[i].classList.remove("show");
                x[i].style.display = "none";
            }
            x[slideIndex-1].style.display = "block";
            setTimeout(function() {
                x[slideIndex-1].classList.add("show");
            }, 10);

            // Show and fade the heading
            heading.classList.remove("show-heading");
            setTimeout(function() {
                heading.classList.add("show-heading");
            }, 100);

            // Add glowing effect
            var sliderContainer = document.querySelector('.slider-container');
            sliderContainer.style.boxShadow = '0 0 20px rgba(0, 0, 255, 0.8)';
            setTimeout(function() {
                sliderContainer.style.boxShadow = '0 0 20px rgba(0, 0, 255, 0)';
            }, 1000); // Glowing effect duration
        }
    </script>

</body>
